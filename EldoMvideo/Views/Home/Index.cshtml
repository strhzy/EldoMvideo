@namespace EldoMvideo.Views.Home
@{
    ViewBag.Title = "ЭльдоМвидео";
    var categories = ViewBag.Categories as List<EldoMvideo.Models.Category>;
}

<div class="jumbotron mt-4">
    <h1 class="display-4">Добро пожаловать в ЭльдоМвидео!</h1>
    <p class="lead">Мы предлагаем вам лучшие товары по самым выгодным ценам.</p>
</div>
<div class="container mt-4">
    <div class="row row-cols-2 row-cols-sm-1 gap-3">
        @foreach(var item in categories)
        {
            <a href="@Url.Action("Catalog", "Home", new { category_id = item.id })" class="btn card text-center text-decoration-none rounded-lg" style="width: 25rem; background-color: #E6E6FA">
                <div class="card-body">
                    <h5 class="card-header">@Html.DisplayFor(modelItem => item.category)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.descript)</p>
                    <p>@Html.DisplayFor(modelItem => item.id)</p>
                </div>
            </a>
        }
    </div>
</div>



