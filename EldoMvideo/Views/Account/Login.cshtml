@namespace EldoMvideo.Views.Account
<h1 class="text-center">Вход</h1>
<div class="card" style="margin: 5em; background-color: #E6E6FA">
    <div class="card-body text-center" style="padding: 0rem">
        <h5 class="card-title">Вход</h5>
        <form asp-action="Login" asp-controller="Account" method="post" >
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="text" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
            <button type="submit" class="btn btn-primary" style="margin-top: 12px;margin-bottom: 12px; font-size: 2rem">
                Войти
            </button>
        </form>
    </div>
</div>
